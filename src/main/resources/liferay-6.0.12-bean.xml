<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="defaultCountBean" class="yg0r2.dm.mvc.displayfield.DisplayField">
		<constructor-arg name="id">
			<null />
		</constructor-arg>
		<constructor-arg name="fieldType" type="yg0r2.dm.mvc.displayfield.FieldType" value="INPUT" />
		<constructor-arg name="value" value="0" />
		<constructor-arg name="required" value="true" />
	</bean>

	<bean id="blog-entry" class="yg0r2.dm.entry.DataManipulatorEntry">
		<constructor-arg index="0" name="displayFields">
			<list>
				<bean parent="defaultCountBean">
					<constructor-arg name="id" value="blog-entry-count" />
				</bean>
				<bean parent="defaultCountBean">
					<constructor-arg name="id" value="blog-entry-edit-count" />
				</bean>
			</list>
		</constructor-arg>
		<constructor-arg index="1" name="entrySpecificArgs">
			<map>
				<entry key="yg0r2.dm.liferay.LiferayEntryKey.ENTRY_ID_KEY" value="entryId" />
			</map>
		</constructor-arg>
		<constructor-arg index="2" name="addMethod">
			<bean class="yg0r2.dm.liferay.LiferayUtilMethod">
				<constructor-arg name="utilClassName" value="com.liferay.service.blog.BlogEntryServiceUtil" />
				<constructor-arg name="methodName" value="addEntry" />
				<constructor-arg name="parameters">
					<list>
						<bean class="yg0r2.dm.liferay.Parameter">
							<constructor-arg name="name" value="title" />
							<constructor-arg name="className" value="java.lang.String" />
							<constructor-arg name="value" value="${counter}. Blog Entry Title - ${rndString}" />
						</bean>
						<bean class="yg0r2.dm.liferay.Parameter">
							<constructor-arg name="name" value="content" />
							<constructor-arg name="className" value="java.lang.String" />
							<constructor-arg name="value" value="${counter}. Blog Entry Content - ${rndString}" />
						</bean>
					</list>
				</constructor-arg>
			</bean>
		</constructor-arg>
		<constructor-arg index="3" name="updateMethod">
			<bean class="yg0r2.dm.liferay.LiferayUtilMethod">
				<constructor-arg name="utilClassName" value="com.liferay.service.blog.BlogEntryServiceUtil" />
				<constructor-arg name="methodName" value="updateEntry" />
				<constructor-arg name="parameters">
					<list>
						<bean class="yg0r2.dm.liferay.Parameter">
							<constructor-arg name="name" value="entryId" />
							<constructor-arg name="className" value="long" />
							<constructor-arg name="value" value="1" />
						</bean>
						<bean class="yg0r2.dm.liferay.Parameter">
							<constructor-arg name="name" value="editedTitle" />
							<constructor-arg name="className" value="java.lang.String" />
							<constructor-arg name="value" value="${updatePrefix}${counter}. Blog Entry Title - ${rndString}" />
						</bean>
						<bean class="yg0r2.dm.liferay.Parameter">
							<constructor-arg name="name" value="editedContent" />
							<constructor-arg name="className" value="java.lang.String" />
							<constructor-arg name="value" value="${updatePrefix}${counter}. Blog Entry Content - ${rndString}" />
						</bean>
					</list>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>
</beans>